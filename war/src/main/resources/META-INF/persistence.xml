             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
			 					 http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
	<persistence-unit name="wordrails" transaction-type="RESOURCE_LOCAL">
		<provider>co.xarx.trix.config.multitenancy.MultiTenantHibernatePersistence</provider>

		<class>co.xarx.trix.domain.AndroidApp</class>
		<class>co.xarx.trix.domain.Cell</class>
		<class>co.xarx.trix.domain.Comment</class>
		<class>co.xarx.trix.domain.EventEntity</class>
		<class>co.xarx.trix.domain.File</class>
		<class>co.xarx.trix.domain.FileContents</class>
		<class>co.xarx.trix.domain.GlobalParameter</class>
		<class>co.xarx.trix.domain.Image</class>
		<class>co.xarx.trix.domain.Network</class>
		<class>co.xarx.trix.domain.NetworkRole</class>
		<class>co.xarx.trix.domain.Person</class>
		<class>co.xarx.trix.domain.Post</class>
		<class>co.xarx.trix.domain.page.BaseSection</class>
		<class>co.xarx.trix.domain.page.Page</class>
		<class>co.xarx.trix.domain.page.QueryableListSection</class>
		<class>co.xarx.trix.domain.page.ContainerSection</class>
		<class>co.xarx.trix.domain.query.ElasticSearchQuery</class>
		<class>co.xarx.trix.domain.PostDraft</class>
		<class>co.xarx.trix.domain.PostScheduled</class>
		<class>co.xarx.trix.domain.PostTrash</class>
		<class>co.xarx.trix.domain.Row</class>
		<class>co.xarx.trix.domain.Station</class>
		<class>co.xarx.trix.domain.StationPerspective</class>
		<class>co.xarx.trix.domain.StationRole</class>
		<class>co.xarx.trix.domain.Taxonomy</class>
		<class>co.xarx.trix.domain.Term</class>
		<class>co.xarx.trix.domain.TermPerspective</class>
		<class>co.xarx.trix.domain.User</class>
		<class>co.xarx.trix.domain.UserConnection</class>
		<class>co.xarx.trix.domain.UserGrantedAuthority</class>
		<class>co.xarx.trix.domain.Sponsor</class>
		<class>co.xarx.trix.domain.PasswordReset</class>
		<class>co.xarx.trix.domain.Notification</class>
		<class>co.xarx.trix.domain.Recommend</class>
		<class>co.xarx.trix.domain.Picture</class>
		<class>co.xarx.trix.domain.PostRead</class>
		<class>co.xarx.trix.domain.PostEvent</class>
		<class>co.xarx.trix.domain.PersonNetworkRegId</class>
		<class>co.xarx.trix.domain.PersonNetworkToken</class>
		<class>co.xarx.trix.domain.Invitation</class>
		<class>co.xarx.trix.domain.CertificateIos</class>
		<class>co.xarx.trix.domain.Ad</class>
		<class>co.xarx.trix.domain.Section</class>
		<class>co.xarx.trix.domain.Video</class>
		<class>co.xarx.trix.domain.query.FixedQuery</class>
		<class>co.xarx.trix.domain.query.PageableQuery</class>
		<class>co.xarx.trix.domain.query.BaseObjectQuery</class>
		<class>co.xarx.trix.domain.query.PostQuery</class>


		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="true"/>

			<property name="hibernate.search.default.directory_provider" value="filesystem"/>
			<property name="hibernate.search.default.indexBase" value="indexes"/>
			<property name="hibernate.default_batch_fetch_size" value="200" />
			<property name="hibernate.search.default.worker.execution" value="async"/>
			<property name="hibernate.search.worker.thread_pool.size" value="3"/>
			<property name="hibernate.current_session_context_class" value="thread"/>
			<property name="hibernate.classloading.use_current_tccl_as_parent" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
		</dependency>
							
		
						
		<dependency>
			<groupId>com.wordrails</groupId>
			<artifactId>wordrails2-api</artifactId>
		</dependency>
		
		<dependency>
			<groupId>com.wordrails</groupId>
			<artifactId>wordrails2-generator</artifactId>
			<version>${project.version}</version>
		</dependency>				
	</dependencies>
</project>